# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 4
max_line_length = 100

# Python specific settings
[*.py]
indent_style = space
indent_size = 4

# JavaScript and TypeScript specific settings
[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 2

# JSON and YAML files
[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# Makefiles require tabs
[Makefile]
indent_style = tab